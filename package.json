{
  "private": true,
  "workspaces": {
    "packages": ["frontend", "backend", "api"]
  },
  "scripts": {
    "docker:frontend:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:frontend:build": "docker compose -f docker-compose.yml -f docker-compose.build.yml build",
    "docker:frontend:serve": "docker compose -f docker-compose.yml -f docker-compose.build.yml up -d",
    "frontend:dev": "yarn workspace frontend quasar dev -m spa",
    "frontend:build": "yarn workspace frontend quasar build -m ssr",
    "backend:dev": "yarn workspace backend start:dev",
    "backend:build": "yarn workspace backend build",
    "backend:openapi": "yarn workspace backend openapi",
    "api:build": "yarn workspace api build",
    "api:rebuild": "yarn backend:openapi && yarn api:build"
  }
}