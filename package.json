{
  "private": true,
  "workspaces": {
    "packages": [
      "frontend",
      "backend",
      "api"
    ]
  },
  "scripts": {
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:build": "docker compose -f docker-compose.yml -f docker-compose.build.yml build",
    "docker:serve": "docker compose -f docker-compose.yml -f docker-compose.build.yml up -d",
    "frontend:dev": "yarn workspace frontend quasar dev -m spa",
    "frontend:build": "yarn workspace frontend quasar build -m spa",
    "backend:dev": "yarn workspace backend start:dev",
    "backend:build": "yarn workspace backend build",
    "backend:openapi": "yarn workspace backend openapi",
    "api:build": "yarn workspace api build",
    "api:rebuild": "yarn backend:openapi && yarn api:build",
    "backend:deploy": "npx ts-node deploy --path=backend --workspace=backend --service=api --image=ws-auth-api",
    "frontend:deploy": "npx ts-node deploy -p=frontend -w=frontend -s=app -i=ws-auth-app"
  },
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.5.2"
  }
}
